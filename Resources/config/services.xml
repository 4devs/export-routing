<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <defaults public="false" />

        <service id="FDevs\ExportRouting\RoutesExtractorInterface" alias="FDevs\ExportRouting\RoutesExtractor"/>

        <service class="FDevs\ExportRouting\RoutesExtractor">
            <argument type="service" id="Symfony\Component\Routing\RouterInterface"/>
            <argument type="service" id="FDevs\ExportRouting\Extractor\ExposedInterface"/>
        </service>

        <!--exposed-->
        <service id="FDevs\ExportRouting\Extractor\ExposedInterface" alias="FDevs\ExportRouting\Extractor\ChainExposed"/>
        <service class="FDevs\ExportRouting\Extractor\ChainExposed">
            <argument type="tagged" tag="f_devs.js_routing.exposed"/>
        </service>

        <service class="FDevs\ExportRouting\Extractor\OptionExposed">
            <tag name="f_devs.js_routing.exposed"/>
        </service>

        <!--encoder-->
        <service class="FDevs\ExportRouting\Encoder\JsCallbackEncoder">
            <tag name="serializer.encoder"/>
        </service>

        <!--normalizer-->
        <service class="FDevs\ExportRouting\Normalizer\RouteCollectionNormalizer">
            <tag name="serializer.normalizer" priority="0" />
        </service>

        <service class="FDevs\ExportRouting\Normalizer\RouteNormalizer">
            <tag name="serializer.normalizer" priority="0" />
        </service>

        <service class="FDevs\ExportRouting\Normalizer\RoutesExtractorNormalizer">
            <tag name="serializer.normalizer" priority="0" />
        </service>

    </services>
</container>
